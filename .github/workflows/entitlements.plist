<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow AppleEvents (needed for 1Password CLI and similar tools) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Disable library validation (allows loading of arbitrary dylibs; some shells do this) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow DYLD environment variables (needed for some dev tools; homebrew, others) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
</dict>
</plist>
